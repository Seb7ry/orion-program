# ===========================================
# ORION PROGRAM SERVICE - Environment Variables
# ===========================================

# Server Configuration
SERVER_PORT=8093
SERVICE_NAME=orion-program

# Spring Profiles
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/oriondb

# External Services
USER_SERVICE_URL=http://localhost:8092/service/user

# Service Timeouts
SERVICE_CONNECTION_TIMEOUT=5s
SERVICE_READ_TIMEOUT=10s
SERVICE_MAX_RETRIES=3
SERVICE_RETRY_DELAY=500ms

# Circuit Breaker
SERVICE_FAILURE_RATE=50.0
SERVICE_MIN_CALLS=5
SERVICE_CIRCUIT_WAIT=30s

# Logging
LOG_LEVEL=DEBUG
WEB_LOG_LEVEL=INFO
MONGODB_LOG_LEVEL=INFO