# ===========================================
# ORION PROGRAM SERVICE - Docker Environment
# ===========================================

# Server Configuration
SERVER_PORT=8093
SERVICE_NAME=orion-program

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker

# Database Configuration (Docker network)
MONGODB_URI=mongodb://mongo:27017/oriondb

# External Services (Docker network)
USER_SERVICE_URL=http://orion-user:8092/service/user

# Service Timeouts (production-like)
SERVICE_CONNECTION_TIMEOUT=3s
SERVICE_READ_TIMEOUT=15s
SERVICE_MAX_RETRIES=3
SERVICE_RETRY_DELAY=1s

# Circuit Breaker
SERVICE_FAILURE_RATE=60.0
SERVICE_MIN_CALLS=10
SERVICE_CIRCUIT_WAIT=60s

# Logging (less verbose for containers)
LOG_LEVEL=INFO
WEB_LOG_LEVEL=WARN
MONGODB_LOG_LEVEL=WARN